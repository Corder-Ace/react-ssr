{
    "compilerOptions": {
        "outDir": "./dist/", //输出目录
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "baseUrl": ".",
        "paths": {
            "components/*":[
                "./client/src/components/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "webpack",
        "dist",
    ]
}